<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_local_music"
        android:layout_width="match_parent"
        android:layout_height="@dimen/personal_content_item_height"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        >
        <TextView
            android:id="@+id/tv_local_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_local_music"
            android:textSize="@dimen/personal_content_item_text_size"
            android:layout_gravity="center"
            />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_like"
        android:layout_width="match_parent"
        android:layout_height="@dimen/personal_content_item_height"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        >
        <TextView
            android:id="@+id/tv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_like_music"
            android:textSize="@dimen/personal_content_item_text_size"
            android:layout_gravity="center"
            />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_about"
        android:layout_width="match_parent"
        android:layout_height="@dimen/personal_content_item_height"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        >
        <TextView
            android:id="@+id/tv_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于"
            android:textSize="@dimen/personal_content_item_text_size"
            android:layout_gravity="center"
            />
    </android.support.v7.widget.CardView>
</LinearLayout>